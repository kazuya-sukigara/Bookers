<h2>Books</h2>
<% @books.each do |book| %>
<table>
	<tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr>
    <th><%=book.title %></th>
    <th><%=book.body %></th>
    <th><%= link_to 'Show', book_path(book.id)%></th>
    <th><%= link_to "Edit",edit_book_path(book)%></th>
    <th><%= link_to 'Destroy',book_path(book.id), method: :delete %></th>
  </tr>
</table>
<% end %>




<h2>New book</h2>

<% if flash[:error_messages] %>
  <div class="">
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url: '/books') do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>