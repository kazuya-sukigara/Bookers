<h2>Books</h2>

<table>
	<tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%=book.title %></td>
    <td><%=book.body %></td>
    <td><%= link_to 'Show', book_path(book.id)%></td>
    <td><%= link_to "Edit",edit_book_path(book)%></td>
    <td><%= link_to 'Destroy',book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>


<h2>New book</h2>

<% if flash[:error_messages] %>
  <div class="">
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url: '/books') do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>